{
  "plugins": [
    "react",
    "flowtype",
    "react-hooks"
  ],
  "extends": [
    "airbnb",
    "plugin:flowtype/recommended"
  ],
  "rules": {
    "func-names": [
      "error",
      "never"
    ],
    "indent": [
      "error",
      4,
      { "SwitchCase": 1 }
    ],
    "no-underscore-dangle": 0,
    "linebreak-style": 0,
    "react/jsx-indent": 0,
    "react/jsx-indent-props": 0,
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js"
        ]
      }
    ],
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": true
      }
    ],
    "import/prefer-default-export": "off",
    "no-param-reassign": [2, { "props": false }],
    "react-hooks/rules-of-hooks": "error",
    "jsx-a11y/label-has-for": [ 2, {
      "components": [ "Label" ],
      "required": {
        "some": [ "nesting", "id" ]
      },
      "allowChildren": false
    }]
  },
  "env": {
    "browser": true,
    "commonjs": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "globals": {
    "expect": true
  }
}